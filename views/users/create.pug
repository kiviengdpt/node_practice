extends ../layouts/common

block content
  h1 Create User

  if errors
    each error in errors
      .alert.alert-danger= error

  form(action='/users/create', method='POST')
    .form-group
      label(for='name') Name
      input(name='name',id='name' type='text', class='form-control', value=values ? values.name :'')
      
    .form-group
      label(for='phone') Phone
      input(name='phone',id='phone' type='text', class='form-control', value=values ? values.phone :'')
      
      button(class='btn btn-primary mt-3') Create