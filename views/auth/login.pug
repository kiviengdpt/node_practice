extends ../layouts/common

block content
  h1 Login
  if errors
    each error in errors
      .alert.alert-danger= error

  form(method='POST')
    .form-group
      label(for='email') Email
      input(name='email',id='email' type='text', class='form-control', value=values ? values.email:'')
      
    .form-group
      label(for='password') Password
      input(name='password',id='password' type='password', class='form-control')
      
      button(class='btn btn-primary mt-3') Log in